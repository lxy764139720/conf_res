<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.4//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.conf_res.dao.AuditLogDao">
    <resultMap id="resultMap" type="AuditLog">
        <id property="id" column="id" javaType="Integer"/>
        <result property="aid" column="aid" javaType="String"/>
        <result property="uid" column="uid" javaType="String"/>
        <result property="rid" column="rid" javaType="String"/>
        <result property="auditTime" column="audit_time" javaType="java.time.LocalDateTime"/>
        <result property="auditResult" column="audit_result" javaType="String"/>
        <result property="info" column="info" javaType="String"/>
    </resultMap>
    <insert id="insert" parameterType="AuditLog" useGeneratedKeys="true">
        INSERT INTO audit_log VALUES (#{id},#{aid},#{uid},#{rid},#{auditTime},#{auditResult},#{info})
    </insert>
    <delete id="delete" parameterType="Integer">
        DELETE FROM audit_log WHERE id=#{id}
    </delete>
    <update id="update" parameterType="AuditLog">
        UPDATE audit_log SET aid=#{aid},uid=#{uid},rid=#{rid},audit_time=#{auditTime},audit_result#{auditResult},info=#{info} WHERE id=#{id}
    </update>
    <select id="selectById" parameterType="Integer" resultMap="resultMap">
        SELECT * FROM audit_log WHERE id=#{id}
    </select>
    <select id="selectByUid" parameterType="Integer" resultMap="resultMap">
        SELECT * FROM reservation WHERE uid=#{uid} ORDER BY audit_time DEC
    </select>
    <select id="selectByRid" parameterType="Integer" resultMap="resultMap">
        SELECT * FROM reservation WHERE rid=#{rid} ORDER BY audit_time DEC
    </select>
    <select id="selectAll" resultMap="resultMap">
        SELECT * FROM audit_log ORDER BY audit_time DEC
    </select>
</mapper>